<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="2dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/firstImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/good"
        android:layout_marginBottom="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/teamwork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team work all"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/firstImage"
        app:layout_constraintEnd_toEndOf="@id/firstImage"
        app:layout_constraintStart_toStartOf="@id/firstImage"
        app:layout_constraintTop_toBottomOf="@id/firstImage"/>

    <TextView
        android:id="@+id/latin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convallis vitae, dictum justo, iaculis id,"
        android:textSize="20dp"
        android:layout_marginStart="42dp"
        app:layout_constraintTop_toBottomOf="@id/teamwork"
        app:layout_constraintStart_toStartOf="@id/teamwork"
        app:layout_constraintEnd_toEndOf="@id/teamwork" />

    <TextView
        android:id="@+id/latin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cras a ac augue netus egestas semper"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/latin1"
        app:layout_constraintStart_toStartOf="@id/latin1"
        app:layout_constraintEnd_toEndOf="@id/latin1"/>

    <TextView
        android:id="@+id/latin3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="varius facilisis id"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/latin2"
        app:layout_constraintStart_toStartOf="@id/latin2"
        app:layout_constraintEnd_toEndOf="@id/latin2"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dot"
        android:paddingTop="100dp"
        android:paddingLeft="115dp"
        app:layout_constraintStart_toStartOf="@id/latin3"
        app:layout_constraintTop_toBottomOf="@id/latin3"
        app:layout_constraintBottom_toBottomOf="@id/latin3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotted"
        android:paddingTop="100dp"
        android:paddingLeft="19dp"
        app:layout_constraintStart_toStartOf="@id/latin3"
        app:layout_constraintBottom_toBottomOf="@id/latin3"
        app:layout_constraintTop_toBottomOf="@id/latin3"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotable"
        android:paddingTop="100dp"
        android:paddingLeft="50dp"
        app:layout_constraintStart_toStartOf="@id/latin3"
        app:layout_constraintBottom_toBottomOf="@id/latin3"
        app:layout_constraintTop_toBottomOf="@id/latin3"/>

    <ImageView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotable"
        android:paddingTop="100dp"
        android:paddingLeft="80dp"
        app:layout_constraintStart_toStartOf="@id/latin3"
        app:layout_constraintBottom_toBottomOf="@id/latin3"
        app:layout_constraintTop_toBottomOf="@id/latin3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="@drawable/rectangle"
        android:paddingHorizontal="30dp"
        android:backgroundTint="#000000"
        app:layout_constraintTop_toBottomOf="@id/dot"
        app:layout_constraintEnd_toEndOf="@id/dot"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:background="@drawable/rectangle"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>








</androidx.constraintlayout.widget.ConstraintLayout>


